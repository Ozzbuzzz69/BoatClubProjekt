@page
@model BoatClubWebsite.Pages.Member.CreateMemberModel
@{
}
<h1>Create Member</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Member.Address" class="control-label"></label>
        <input asp-for="Member.Address" class="form-control" />
        <span asp-validation-for="Member.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Member.Email" class="control-label"></label>
        <input asp-for="Member.Email" class="form-control" />
        <span asp-validation-for="Member.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Member.MembershipType" class="control-label"></label>
        <input asp-for="Member.MembershipType" class="form-control" />
        <span asp-validation-for="Member.MembershipType" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Member.Birthday" class="control-label"></label>
        <input asp-for="Member.Birthday" class="form-control" />
        <span asp-validation-for="Member.Birthday" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Member.TelephoneNr" class="control-label"></label>
        <input asp-for="Member.TelephoneNr" class="form-control" />
        <span asp-validation-for="Member.TelephoneNr" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input value="Create new item" type="submit" class="btn btn-primary"><a asp-page="CreateItem"></a>
    </div>

</form>